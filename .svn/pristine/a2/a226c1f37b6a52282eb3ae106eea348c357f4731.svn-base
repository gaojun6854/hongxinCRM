		this.getCurrentSession().saveOrUpdate(entity);
	}

	public void delete(String id) {
		TAutoRepay entity = this.load(id);
		this.getCurrentSession().delete(entity);
	}

	public void flush() {
		this.getCurrentSession().flush();
	}

